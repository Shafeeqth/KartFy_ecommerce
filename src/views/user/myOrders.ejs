				<li class="breadcrumb-item"><a href="/api/v1/Profile">My Account</a></li>
				<li class="breadcrumb-item active" aria-current="page">My Orders</li>
			</ol>
		</div><!-- End .container -->
	</nav><!-- End .breadcrumb-nav -->
  

  <section class="content-main bg-body-tertiary" style="margin-top: -3%;">
	
	<div class="content-header justify-content-center m-0 ">
	  
		
	 
	</div>
	<div class="card mb-4">
	  <div class="card-body" id="Reload">
		<div class="row mb-4">
			
		 
		  <!-- <div class="col-md-6 text-end">
			<select class="form-select">
			  <option>Show 20</option>
			  <option>Show 30</option>
			  <option>Show 40</option>
			</select>
		  </div> -->
		</div>
		<div class="table-responsive">
		  <div id="reload">
			<table class="table " id="ReloadTable">
			  <thead class="font-bold">
				<tr>
				  <th class="text-center col-1">Order ID</th>
				  <th class="text-center col-4" scope="col">Products</th>
				  
				  <th class="text-center col-1" scope="col">Total</th>
				  <th class="text-center col-2" scope="col">Status</th>
				  <th class="text-center col-2" scope="col">Ordered Date</th>
				  <th class="text-center col-2" scope="col" class="text-end">Action</th>
				</tr>
			  </thead>
			 
			  <tbody>
				<%if(Array.isArray(order)&& order.length > 0) {%>
					<%order.forEach(order=>{%>
				
				<tr style="width: 100%; ;" class="shadow" ondblclick="orderDetails('<%=order._id%>')">
				  <td class="text-center col-1"><%=order.orderId%></td>
				  <td class="text-center col-3 " >
					<% order.orderedItems.forEach((item, i)=> {%>
						<div style="float:left; flex-wrap: wrap;" class="m-2">
							<a href="api/v1/product-detail?id=<%=item.product._id%>">
					  <img
						src="/Data/uploads/<%=item.product.images[0]%>"
						alt=""
						class="img-md rounded mx-2 shadow"
					  />
					  <p  class="text-start text-dark" style=" font-size:smaller;"><%= item.product.title%></p>
					</a>
					</div>

					<%})%>
				  </td>
				  
				  <td class="text-center col-1">â‚¹<%= order.orderAmount || order.orderAmout%>.00</td>
				  <td class="text-center col-2">
					
					<%if(order.orderStatus== 'Delivered'){%>
					  <span class=" px-4 py-2 rounded-pill" style="font-weight: 400; background-color: rgb(46, 168, 56); color: #e1d8d8;">
						<%= order.orderStatus%>
					  </span>
					   
					  <%}else if(order.orderStatus== 'Cancelled'){%>
						<span class=" px-4 py-2 rounded-pill" style="font-weight: 400; background-color: rgb(177, 16, 16); color: #e1d8d8;">
							<%= order.orderStatus%>
						</span>

					  <%}else if(order.orderStatus== 'Out For Delivery'){%>
						<span class=" px-4 py-2 rounded-pill" style="font-weight: 400; background-color: rgb(18, 163, 163); color: #e1d8d8;">
							<%= order.orderStatus%>
						</span>

					  <%}else if(order.orderStatus== 'Pending'){%>
						<span class=" px-4 py-2 rounded-pill" style="font-weight: 400; background-color: rgb(12, 95, 120); color: #e1d8d8;">
							<%= order.orderStatus%>
						</span>
						
					  <%}else if(order.orderStatus== 'Shipped'){%>
					<span class=" px-4 py-2 rounded-pill bg-tertiary" >
					
					  <%= order.orderStatus%>
					</span>
					<%}else if(order.orderStatus== 'Placed'){%>
						<span class=" px-4 py-2 rounded-pill bg-primary" style="font-weight: 400; background-color: rgb(101, 15, 32); color: #e1d8d8;">
						  
						  <%= order.orderStatus%>
						</span>
						<%}%>
				  </td class="text-center col-2">
				  <% const formattedDate=order.createdAt.toLocaleString('en-US',
				  { weekday: 'short' , month: 'short' , day: 'numeric' ,
				  year: 'numeric' , hour: 'numeric' , minute: 'numeric' ,
				  second: 'numeric' , hour12: true }); %>
				  <td><%= formattedDate%></td>
				  <td class="text-center col-2 ">
					<%if(order.paymentStatus == 'Failed') {%>
						<button onclick="orderDetails('<%=order._id%>')"  class=" btn bg-warning rounded"><i class="fa-solid fa-indian-rupee-sign"></i>Retry Payment</button>
					<%}else if(order.orderStatus== 'Delivered'){%>
						<button onclick="orderDetails('<%=order._id%>')" class=" btn btn-info rounded">View Details</button>

						<%}else if(order.orderStatus== 'Cancelled'){%>

							<button disabled class="btn btn-danger rounded" >Order Cancelled</button>
							<!-- <a href="/api/v1/shop">Continue shopping</a> -->

					<%}else{%>
					<button data-orderId="<%= order._id%>" id="" class=" cancelOrderTrigger btn btn-danger rounded">Cancel Order</button>
					<%}%>
				  </td >

				</tr>
				
			  </tbody>
			  <%})%>
				<%}else{%>
					
						<dt colspan="5" >
							No orders found.

						</dt>
					
					<%}%>
			 
			
				
			</table>
		  </div>
		</div>
	  </div>
	</div>
  </section>
  <!-- Cancel Order Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
	  <div class="modal-content">
		<div class="modal-header bg-dark text-light">
		  <h5 class="modal-title text-white" id="cancelOrderModalLabel">Cancel Order</h5>
		  <button  type="button" class=" closeButton btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body  m-3">
		  <div class="mb-3">
			<label for="cancelReason" class="form-label">Reason for cancellation</label>
			<select class="form-select" id="cancelReason" required>
			  <option value="Product is not required anymore">Product is not required anymore</option>
			  <option value="The purchase was fraudulent">The purchase was fraudulent</option>
			  <option value="Merchant shipped the wrong item">Merchant shipped the wrong item</option>
			  <option value="The purchase was fraudulent">The purchase was fraudulent</option>
			  
			  <!-- Add options for cancellation reasons -->
			</select>
		  </div>
		  <div class="mb-3">
			<label for="cancelComments" class="form-label">Additional Comments (Optional)</label>
			<textarea class="form-control" id="cancelComments" rows="3"></textarea>
		  </div>
		</div>
		<div class="modal-footer " style="display: flex; justify-content: space-around;">
		  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
		  <button type="button" class="closeButton btn btn-danger" id="confirmCancelOrder">Confirm</button>
		</div>
	  </div>
	</div>
  </div>
  
  <div class="modal fade" id="returnOrderModal" tabindex="-1" aria-labelledby="returnOrderModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
	  <div class="modal-content">
		<div class="modal-header bg-dark text-light my-3">
		  <h5 class="modal-title text-white" id="returnOrderModalLabel">Return Order</h5>
		  <button type="button" class="closeButton btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body m-3">
		  <div class="mb-3">
			<label for="returnReason" class="form-label">Reason for return</label>
			<select class="form-select" id="returnReason" required>
				<option value="Wrong product shipped">Wrong product shipped</option>
				<option value="Damaged goods">Damaged goods</option>
				<option value="Item does not match the description">Item does not match the description</option>
				<option value="Product no longer required">Product no longer required</option>
			</select>
		  </div>
		  <div class="mb-3">
			<label for="returnComments" class="form-label">Additional Comments (Optional)</label>
			<textarea class="form-control" id="returnComments" rows="3"></textarea>
		  </div>
		</div>
		<div class="modal-footer " style="display: flex; justify-content: space-around;">
			<button type="button" class="closeButton btn-close" data-bs-dismiss="modal" aria-label="Close">close</button>
		  <button type="button" class="btn btn-warning" id="confirmReturnOrder">Confirm</button>
		</div>
	  </div>
	</div>
  </div>
  
  

