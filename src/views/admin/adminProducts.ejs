<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>KartFy Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg" />
    <!-- Template CSS -->
    <link href="/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
</head>

<body>
    <%- include('../partials/sidenav.ejs') -%>
        <main class="main-wrap">

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                        <p>Products at KartFy.</p>

                    </div>
                    <div>
                        <a href="/api/v1/admin/products/add-product" class="btn btn-dark ">Add Product</a>
                    </div>
                </div>
                <div class="card mb-4 ">
                    <header class="card-header">

                        <div class="row">
                            <div class="col-3 fw-bold ">Title</div>
                            <div class="col-3 fw-bold ">Description</div>
                            <div class="col-6 fw-bold ">Images</div>




                        </div>


                    </header>


                    <div class="card-body">
                        <div class="table-responsive" id="Reload">
                            <table class="table table-hover">

                                <tbody>



                                    <%if(Array.isArray(products) && products.length> 0 ){%>
                                       
                                            <%products.forEach((product)=> { %>
                                                <tr class="product-row  rounded shadow-sm  " data-target="<%=product._id%>">

                                                <td class="col-2 ">
                                                    <%=product.title%>
                                                </td>
                                                
                                                <td class="col-3">
                                                    <%=product.description%>
                                                </td>


                                                </td>

                                                <td class="col-2 ">
                                                    <a href="#" class="itemside">
                                                        <div class="">

                                                            <img src="/Data/uploads/<%= product.images[0]%>"
                                                                class="img-md rounded " alt="Userpic" />

                                                        </div>
                                                        <!-- <div class="info pl-3">
                                                            <h6 class="mb-0 title" style="text-transform: capitalize;"></h6>
                                                            <small class="text-muted">Seller ID: #439</small>
                                                        </div> -->
                                                    </a>
                                                </td>

                                                <td class="text-center col-3" id="status">
                                                   
                                                        <button id="button" class="btn btn-outline-secondary mx-1"
                                                            onclick="listProduct('<%=product._id%>','<%=product.title%>','<%=product.isListed%>')">
                                                            <%= product.isListed ? "Unlist" : "List" %>
                                                        </button>

                                                        

                                                           

                                                                

                                                               


                                                                      

                                                                            <a href="/api/v1/admin/products/product-detail?id=<%=product._id%>"
                                                                                class="btn btn-outline-dark mx-1 ">
                                                                                View details
                                                                            </a>
                                                </td>
                                                <tr>
                                                <td class="details" id="<%=product._id%>" style="display: none;">
                                                    <div>
                                                        <img src="/Data/uploads/<%= product.images[0] %>" class="img-md rounded" alt="Product Image" />
                                                    </div>
                                                    <div>
                                                    <p>size vaients</p>
                                                    <ul>
                                                        <li>One</li>
                                                        <li>two</li>
                                                    </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                                
                                        </tr>


                                        <%})%>
                                    <%}else{%>
                                            <tr>
                                                <td colspan="5">No user found</td>
                                            </tr>


                                            <%}%>

                                </tbody>
                            </table>
                            <!--  table-responsive.// -->
                        </div>
                    </div>

                </div>
                <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination  justify-content-center">
          
                            <a class="page-link" href="?page=<%=page+1-1%>"><i class="material-icons md-chevron_left"></i><%page+1+1%></a>
          
                            <li class="page-item ">
                                <a class="page-link" href="?page=<%=page+1%>"><%=page+1%></a>
                            </li>
          
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
          
                            <a class="page-link" href="?page=<%=page+1+1%>"><%page+1+1%><i class="material-icons md-chevron_right"></i></a>
          
                        </ul>
          
                    </nav>
                </div>
            </section>
            <!-- content-main end// -->
            <%- include('../partials/adminFooter.ejs') -%>
        </main>
        <script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/vendors/select2.min.js"></script>
        <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="/assets/js/main.js" type="text/javascript"></script>
        
<script src="/javascript/admin/adminProduct.js">
</script>
</body>

</html>

